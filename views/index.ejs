<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/">
          <input
            name="cityName"
            type="text"
            class="user-input"
            placeholder="Enter a City"
            required
            value="<%= cityName %>"
          />
          <input type="submit" class="user-button" value="Get Weather" />
        </form>
        <% if(weather){ %>
        <p><%= JSON.stringify(weather) %></p>
        <% } %> <% if(error){ %>
        <p><%= error %></p>
        <% } %>
      </fieldset>
    </div>
  </body>
</html>
